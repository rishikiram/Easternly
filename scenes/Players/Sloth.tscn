script/source = "extends Sprite
onready var state_machine = $AnimationTree.get(\"parameters/playback\")

func handle_state(velocity:Vector2):
	var current_node = state_machine.get_current_node()
	if PlayerVariables.player_state == 1:
		state_machine.travel(\"idle loop\")
		return
	if velocity ==  Vector2(0,0):
		if current_node != \"idle\" and current_node != \"blink\" and current_node != \"sleep\":
			state_machine.travel('idle')
	elif get_parent().is_holding_item:
		state_machine.travel(\"run\")
	else:
		state_machine.travel('walk')
	if velocity.x < 0 and scale[0] > 0:
		flip()
	if velocity.x > 0 and scale[0] < 0:
		flip()
func flip():
	scale[0] = scale[0] * -1
	if get_parent().is_holding_item:
		get_parent().get_node(\"Item\").position.x = -1*get_parent().get_node(\"Item\").position.x
"

